{
	"compilerOptions": {
		"allowJs": true,
		"module": "ES2022",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": "./",
		"declaration": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2021"
	},
	"include": [
		"src/**/*",
		"test/**/*",
		"jest.d.ts"
	]
}
